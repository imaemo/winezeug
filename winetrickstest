#!/bin/sh
# There's a lot of stuff here that probably doesn't need to be tested, e.g., 
# setting dlls to native, and different windows versions. It doesn't hurt to test
# and may find weird problems. Plus, that way we can test every function.

set -ex

rm -rf $HOME/.winetrickscache
WINEPREFIX=${WINEPREFIX:-$HOME/.wine}

for verb in \
    ahk \
    art2kmin \
    atmlib \
    colorprofile \
    comctl32 \
    comctl32.ocx \
    corefonts \
    d3dx9 \
    dcom98 \
    dinput8 \
    dirac \
    directplay \
    dotnet11 \
    dotnet20 \
    droid \
    fakeie6 \
    ffdshow \
    firefox \
    flash \
    fm20 \
    fontfix \
    fontsmooth-bgr \
    fontsmooth-disable \
    fontsmooth-gray \
    fontsmooth-rgb \
    gdiplus \
    gecko \
    gecko-dbg \
    glsl-disable \
    glsl-enable \
    hosts \
    ie6 \
    jet40 \
    liberation \
    mdac25 \
    mdac27 \
    mdac28 \
    mfc40 \
    mfc42 \
    mingw \
    mingw-gdb \
    mono20 \
    mono22 \
    mono24 \
    mozillabuild \
    mpc \
    mshflxgd \
    msi2 \
    msls31 \
    msmask \
    msscript \
    msxml3 \
    msxml4 \
    msxml6 \
    nocrashdialog \
    openwatcom \
    pdh \
    physx \
    quicktime72 \
    riched20 \
    riched30 \
    sandbox \
    shockwave \
    tahoma \
    urlmon \
    vb2run \
    vb3run \
    vb4run \
    vb5run \
    vb6run \
    vc2005express \
    vcrun6 \
    vcrun2003 \
    vcrun2005 \
    vcrun2008 \
    vjrun20 \
    vlc \
    wenquanyi \
    wininet \
    wme9 \
    wmp9 \
    wmp10 \
    wsh56 \
    wsh56js \
    wsh56vb \
    xact \
    xvid \
    fakeie6 \
    allfonts \
    native_mdac \
    native_oleaut32 \
    volnum \
    nt40 \
    win98 \
    win2k \
    winxp \
    vista \
    winver= \
    version

do
    wineserver -k || true
    rm -rf $WINEPREFIX
    sh winetricks  -q -v $verb
done

# Known to have problems

if [ "$1" = "--all" ]
then
    # Ignores -q
    for verb in \
        allcodecs \
        cmake \
        cygwin \
        directx9 \
        divx \
        icodecs \
        kde \
        ole2 \
        psdk2003 \
        psdkwin7 \
        python26 \
        vc2005sp1 \
        vc2005trial
    do
        wineserver -k || true
        rm -rf $WINEPREFIX
        sh winetricks -v $verb
    done
fi

# Broken
#    controlpad #Broken on 64-bit karmic
#    dotnet30 
#    fm20
#    ogg
#    psdkvista
#    vc2005expresssp1

exit 0
